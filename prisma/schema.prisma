// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum RequestStatus {
  pending
  in_progress
  completed
  cancelled
}

enum RequestType {
  rd_parts
  work_order
}

enum WorkOrderType {
  aero
  moto
}

model PrintRequest {
  id            String   @id @default(cuid())
  partNumber    String
  description   String?
  quantity      Int
  deadline      DateTime?
  status        RequestStatus @default(pending)
  requestType   RequestType @default(rd_parts)
  workOrderType WorkOrderType?  // Only used when requestType is work_order
  requesterName String
  requesterEmail String

  // Optional file fields
  fileName      String?
  filePath      String?
  fileSize      Int?

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  completedAt   DateTime?
  notes         String?  // Admin notes
}
